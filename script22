local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/ermiya1231/Script1/refs/heads/main/orionlib')))()
local enabled = false
local running = false

local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")

-- اگر اسم فولدر فرق داره، فقط اسمشو عوض کن
local folder = workspace:WaitForChild("QuartzCollectibles")

-- فقط برای اینکه ارور نده
local title = {Text = ""}

local Window = OrionLib:MakeWindow({Name = "هک 666 | Superpower Simulator: Chakra", HidePremium = true, IntroEnabled = false, SaveConfig = false, ConfigFolder = "OrionTest"})

local Tab = Window:MakeTab({
	Name = "Main",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

Tab:AddToggle({
	Name = "تمرین دادن همه قدرت ها",
	Default = false,
	Callback = function(Value)
turr = Value
 while turr and task.wait(0.15) do
local ab = {"Strength", "Defense", "Agility"}
for _, tex in ipairs(ab) do
 local args = {
    [1] = tex
}

game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("Training"):FireServer(unpack(args))
end
 end
	end    
})

