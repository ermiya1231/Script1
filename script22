Tab:AddToggle({
	Name = "تلپورت اتوماتیک به کریستال ها",
	Default = false,
	Callback = function(Value)
		enabled = Value

		if enabled then
			task.spawn(function()
				while enabled do
					if not running then
						running = true

						for _, item in ipairs(folder:GetChildren()) do
							if not enabled then break end

							local part = item:IsA("BasePart") and item 
								or item:FindFirstChildWhichIsA("BasePart")

							if part then
								hrp.CFrame = part.CFrame + Vector3.new(0, 3, 0)
								task.wait(0.5)
							end
						end

						running = false
					end
					task.wait(0.3)
				end
			end)
		end
	end
})
